@model List<LivrariaBCC.Entity.Livro>
@{
    ViewBag.Title = "Index";
}

@ViewBag.result

<h2>Listagem de livros</h2>

@Html.ActionLink("Adicionar novo", "Editar", null, new { @class = "btn btn-outline-primary mt-2 mb-2" })

<div class="caixa-busca">
    @using (Html.BeginForm("Index", "Livro", FormMethod.Post, new { @class = "form-inline" }))
    {
        <label class="sr-only" for="SearchString">Filtrar por palavra:</label>
        @Html.TextBox("SearchString", "", new { @class = "form-control mb-2 mr-sm-2", placeholder = "Filtrar por palavra" })
        <input type="submit" value="Filtrar" class="btn btn-primary mb-2" />
    }
</div>

<table class="table table-hover mt-2">
    <tr>
        <th scope="col">
            Id
        </th>
        <th scope="col">
            @Html.ActionLink("ISBN", "Index", new { sortOrder = ViewBag.IsbnSortParm })
        </th>
        <th scope="col">
            @Html.ActionLink("Autor", "Index", new { sortOrder = ViewBag.AutorSortParm })
        </th>
        <th scope="col">
            @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NomeSortParm })
        </th>
        <th scope="col">
            @Html.ActionLink("Preço", "Index", new { sortOrder = ViewBag.PrecoSortParm })
        </th>
        <th scope="col">
            @Html.ActionLink("Data de Publicação", "Index", new { sortOrder = ViewBag.DataSortParm })
        </th>
        <th scope="col">
            @Html.ActionLink("Imagem Capa", "Index", new { sortOrder = ViewBag.ImagemSortParm })
        </th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    @foreach (var i in Model)
    {
        <tr>
            <th scope="row">@i.Id</th>
            <td>@i.ISBN</td>
            <td>@i.Autor</td>
            <td>@i.Nome</td>
            <td>@i.Preco</td>
            <td>@i.DataPublicacao.ToShortDateString()</td>
            <td>@i.ImagemCapa</td>
            <td>@Html.ActionLink("Editar", "Editar", "Livro", new { @i.Id }, new { })</td>
            <td>@Html.ActionLink("Excluir", "Excluir", "Livro", new { @i.Id }, new { })</td>
        </tr>
    }
</table>